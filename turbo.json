{
	"$schema": "https://turbo.build/schema.json",
	"globalPassThroughEnv": [
		"STORYBOOK_TELEMETRY_URL",
		"STORYBOOK_DISABLE_TELEMETRY",
		"STORYBOOK_TELEMETRY_DEBUG"
	],
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"build-storybook": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"]
		},
		"dev": {
			"persistent": true
		},
		"storybook": {
			"dependsOn": ["^build"],
			"persistent": true,
			"interruptible": true
		},
		"//#format": {},
		"//#format:check": {},
		"//#lint": {},
		"//#lint:ci": {},
		"//#test:run": {},
		"//#test:ci": {
			"outputs": ["coverage/**", "test-report.junit.xml"]
		},
		"typecheck": {},
		"//#typecheck": {},
		"publint": {
			"dependsOn": ["build"],
			"outputs": []
		}
	}
}

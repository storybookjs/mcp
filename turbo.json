{
	"$schema": "https://turbo.build/schema.json",
	"globalPassThroughEnv": [
		"STORYBOOK_TELEMETRY_URL",
		"STORYBOOK_DISABLE_TELEMETRY",
		"STORYBOOK_TELEMETRY_DEBUG",
		"CI",
		"GITHUB_ACTIONS",
		"GITHUB_RUN_ID",
		"GITHUB_RUN_NUMBER",
		"GITHUB_RUN_ATTEMPT",
		"GITHUB_REPOSITORY",
		"GITHUB_EVENT_NAME",
		"GITHUB_SHA",
		"GITHUB_REF",
		"GITHUB_HEAD_REF",
		"GITHUB_BASE_REF",
		"GITHUB_ACTOR",
		"GITHUB_WORKFLOW",
		"GITHUB_JOB",
		"GITHUB_SERVER_URL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"build-storybook": {
			"dependsOn": ["^build"],
			"outputs": ["storybook-static/**"]
		},
		"dev": {
			"persistent": true
		},
		"storybook": {
			"dependsOn": ["^build"],
			"with": ["@storybook/addon-mcp#dev"],
			"persistent": true,
			"interruptible": true
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": []
		}
	}
}

{
  "name": "@storybook/addon-mcp-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for Storybook MCP addon and related packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/storybookjs/addon-mcp"
  },
  "license": "MIT",
  "author": "Jeppe Reinhold <jeppe@chromatic.com>, Tom Coleman <tom@chromatic.com>",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "changeset": "changeset",
    "dev": "turbo run dev",
    "inspect": "pnpm --filter @storybook/addon-mcp inspect",
    "release": "turbo run build && pnpm changeset publish",
    "start": "pnpm --filter @storybook/addon-mcp start",
    "storybook": "pnpm --filter @storybook/addon-mcp storybook",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.3.5"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "engines": {
    "node": ">=20.0.0"
  }
}
